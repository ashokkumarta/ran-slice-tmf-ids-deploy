<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:camel="http://camel.apache.org/schema/spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
          http://camel.apache.org/schema/spring
          http://camel.apache.org/schema/spring/camel-spring.xsd">

	<camel:sslContextParameters id="sslContext"
		certAlias="1.0.1">
		<camel:keyManagers keyPassword="password">
			<camel:keyStore resource="etc/zbusiness.p12"
				password="password" />
		</camel:keyManagers>
		<camel:trustManagers>
			<camel:keyStore resource="etc/truststore.p12"
				password="password" />
		</camel:trustManagers>
	</camel:sslContextParameters>

	<bean id="ArtifactRequestCreationProcessor"
		class="de.fhg.aisec.ids.camel.idscp2.processors.ArtifactRequestCreationProcessor" />
	<bean id="ContractRequestCreationProcessor"
		class="de.fhg.aisec.ids.camel.idscp2.processors.ContractRequestCreationProcessor" />
	<bean id="ContractResponseProcessor"
		class="de.fhg.aisec.ids.camel.idscp2.processors.ContractResponseProcessor" />
	<bean id="TypeExtractionProcessor"
		class="de.fhg.aisec.ids.camel.idscp2.processors.IdsMessageTypeExtractionProcessor" />

	<bean id="TMFArtifactInitProcessor"
		class="tmf.ids.processors.TMFArtifactInitProcessor" />
	<bean id="TMFArtifactResponseProcessor"
		class="tmf.ids.processors.TMFArtifactResponseProcessor" />
	<bean id="TMFContractInitProcessor"
		class="tmf.ids.processors.TMFContractInitProcessor" />

	<bean id="ContractRequestProcessor"
		class="de.fhg.aisec.ids.camel.idscp2.processors.ContractRequestProcessor" />
	<bean id="ContractAgreementReceiverProcessor"
		class="de.fhg.aisec.ids.camel.idscp2.processors.ContractAgreementReceiverProcessor" />


	<camelContext
		xmlns="http://camel.apache.org/schema/spring">

		<route id="slicing-request-contract">
			<from uri="timer://slicingRequestContractRequest?repeatCount=1" />

			<log
				message="### SLICING REQUEST - Initiating request for Contract ###" />

			<setProperty name="artifactUri">
				<constant>https://catalyst.tmf/ran-slicing/slicing-request</constant>
			</setProperty>
			<process ref="TMFArtifactInitProcessor" />

			<log
				message="### SLICING REQUEST - Requesting to 'request for contract' ###" />
			<process ref="ContractRequestCreationProcessor" />
			<to
				uri="idscp2client://isp:29292?awaitResponse=true&amp;connectionShareId=udConnection&amp;sslContextParameters=#sslContext&amp;useIdsMessages=true" />

			<process ref="TypeExtractionProcessor" />
			<choice>
				<when>
					<simple>${exchangeProperty.ids-type} == 'ContractRequestMessage'</simple>

					<log
						message="### SLICING REQUEST - Handling Contract Request Message ###" />
					<setProperty name="containerUri">
						<constant>https://hub.docker.com/layers/ashokkumarta/isp-slicing-request-processor/latest/images/sha256-979b42b2c017d9792abc1ef27b212b85e878043739196854ab082c091e20c49f#9192</constant>
					</setProperty>
					<process ref="ContractRequestProcessor" />
					<to
						uri="idscp2client://isp:29292?awaitResponse=true&amp;connectionShareId=udConnection&amp;sslContextParameters=#sslContext&amp;useIdsMessages=true" />

					<process ref="TypeExtractionProcessor" />
					<choice>
						<when>
							<simple>${exchangeProperty.ids-type} == 'ContractAgreementMessage'</simple>
							<log
								message="### SLICING REQUEST - Handling Contract Agreement Message ###" />
							<!-- Only processing of incoming request must be performed, no reply -->
							<process ref="ContractAgreementReceiverProcessor" />
							<removeHeader headerName="idscp2-header" />
							<setBody>
								<simple>${null}</simple>
							</setBody>
						</when>
						<otherwise>
							<log loggingLevel="ERROR"
								message="### SLICING REQUEST - Server expected ContractAgreementMessage but received unexpected message (otherwise branch):\n${body}\n### Header: ###\n${headers[idscp2-header]}" />
							<removeHeader headerName="idscp2-header" />
							<setBody>
								<simple>${null}</simple>
							</setBody>
						</otherwise>
					</choice>
				</when>
				<otherwise>
					<log loggingLevel="ERROR"
						message="### SLICING REQUEST - Server received unexpected message (otherwise branch):\n${body}\n### Header: ###\n${headers[idscp2-header]}" />
					<removeHeader headerName="idscp2-header" />
					<setBody>
						<simple>${null}</simple>
					</setBody>
				</otherwise>
			</choice>

		</route>


		<route id="slicing-request">
			<from
				uri="timer://slicingRequestTimer?fixedRate=true&amp;period=10000&amp;delay=30000" />

			<log
				message="### SLICING REQUEST - Initiating Slicing Request ###" />
			<setProperty name="artifactUri">
				<constant>https://catalyst.tmf/ran-slicing/slicing-request</constant>
			</setProperty>

			<process ref="ArtifactRequestCreationProcessor" />
			<log
				message="### SLICING REQUEST - Sending request to 'request for slicing request' ###" />

			<to
				uri="idscp2client://isp:29292?awaitResponse=true&amp;connectionShareId=udConnection&amp;sslContextParameters=#sslContext&amp;useIdsMessages=true" />
			<process ref="TypeExtractionProcessor" />
			<choice>
				<when>
					<simple>${exchangeProperty.ids-type} == 'ArtifactRequestMessage'</simple>
					<log
						message="### SLICING REQUEST - Received 'request for slicing request' ###" />

					<log
						message="SLICING REQUEST - Generating slicing request from zbusiness-slicing-request-generator..." />

					<to uri="http://zbusiness:9293?awaitResponse=true" />

					<log
						message="SLICING REQUEST - Pushing slicing request as payload in IDS response..." />
					<setProperty name="tmf_content_pay_load">
						<simple>${bodyAs(String)}</simple>
					</setProperty>

					<setProperty name="artifactUri">
						<constant>https://catalyst.tmf/ran-slicing/slicing-requesta</constant>
					</setProperty>

					<process ref="TMFArtifactResponseProcessor" />
					<log
						message="SLICING REQUEST - Sending slicing request to ISP:\n\n${body}" />
					<to
						uri="idscp2client://isp:29292?connectionShareId=udConnection&amp;sslContextParameters=#sslContext&amp;useIdsMessages=true" />

					<log
						message="SLICING REQUEST - Slicing request sent to ran-regulator successfully" />
				</when>
				<otherwise>
					<log loggingLevel="ERROR"
						message="SLICING REQUEST - Expected ArtifactResponseMessage, but received:\n${body}\n### Header: ###\n${headers[idscp2-header]}" />
				</otherwise>
			</choice>
		</route>

	</camelContext>
</beans>
